<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="header_root_4comics">

        <!-- <item name="android:id">@+id/header_root</item> -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- <item name="android:background">@drawable/theme_listview_header</item> -->
        <item name="android:orientation">vertical</item>
    </style>

    <style name="header_bar_4comics">

        <!-- <item name="android:id">@+id/header_bar</item> -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/titlebar</item>
    </style>

    <style name="header_relative_4comics">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="header_title_4comics">

        <!-- <item name="android:id">@+id/header_title</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#009986</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_setting_4comics">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <!-- <item name="android:src">@drawable/button_header_setting</item> -->
    </style>

</resources>